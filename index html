  <button onclick="speak()">Kuch Boliye Noor</button>

  <script>
    function speak() {
      const msg = new SpeechSynthesisUtterance();
      msg.text = "Assalamu Alaikum, Main Noor hoon. Aap kya janna chahenge?";
      window.speechSynthesis.speak(msg);
    }
  </script>
